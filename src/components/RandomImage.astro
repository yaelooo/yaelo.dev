---
interface Props {
  classes: string
  alt: string
  src: string
  number?: number
  format?: string
}

const { classes, alt, src, format = "avif", number = 4 } = Astro.props
const image = Math.floor(Math.random() * number)
---

<img src={`${src}/${image}.${format}`} alt={alt} loading="lazy" class={classes} />
