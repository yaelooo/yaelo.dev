---
import Link from "@components/Link.astro";
import Arrow from "@icons/Arrow.astro";
import Telegram from "@icons/Telegram.astro";
import Facebook from "@icons/Facebook.astro";
import Instagram from "@icons/Instagram.astro";
import Github from "@icons/Github.astro";

let currentUrl = Astro.url;
---

<footer
  class="max-w-sm sm:max-w-lg md:max-w-screen-sm lg:max-w-screen-md xl:max-w-screen-lg 2xl:max-w-screen-xl h-16 flex flex-col justify-center mx-auto"
>
  <hr class="border-custom-accent mt-3" />
  <nav class="flex items-center justify-between w-full h-full">
    <Link
      title="Principio"
      href={`${currentUrl}#`}
      sr="Ve al principio de la pÃ¡gina."
    >
      <Arrow />
    </Link>
    <div class="flex gap-3">
      <Link
        title="Telegram"
        href="https://t.me/yaelou"
        isExternal
        sr="Ve a mi telegram"
      >
        <Telegram />
      </Link>

      <Link
        title="Facebook"
        href="https://fb.com/yaelooou"
        isExternal
        sr="Ve a mi facebook"
      >
        <Facebook />
      </Link>

      <Link
        title="Instagram"
        href="https://instagram.com/yaelojeje"
        isExternal
        sr="Ve a mi instagram"
      >
        <Instagram />
      </Link>

      <Link
        title="Github"
        href="https://github.com/yaelooo/yaelo.dev"
        isExternal
        sr="Ve a mi github"
      >
        <Github />
      </Link>
    </div>
  </nav>
</footer>
